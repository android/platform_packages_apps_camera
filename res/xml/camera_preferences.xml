<!-- This is a primitive example showing the different types of preferences available. -->
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
      android:title="@string/pref_camera_general_settings_category">

        <CheckBoxPreference
                android:key="pref_camera_recordlocation_key"
                android:title="@string/pref_camera_recordlocation_title"
                android:summary="@string/pref_camera_recordlocation_summary"
                android:defaultValue="false"/>
    </PreferenceCategory>
    
    <PreferenceCategory
      android:title="@string/pref_camera_videoquality_category">
        <!-- android:summary is filled in by CameraSettings -->
        <ListPreference
                android:key="pref_camera_videoquality_key"
                android:defaultValue="@string/pref_camera_videoquality_default"
                android:title="@string/pref_camera_videoquality_title"
                android:entries="@array/pref_camera_videoquality_entries"
                android:entryValues="@array/pref_camera_videoquality_entryvalues"
                android:dialogTitle="@string/pref_camera_videoquality_dialogtitle" />
    </PreferenceCategory>
    <PreferenceCategory
      android:title="@string/pref_camera_audioencoder_category">
        <ListPreference
                android:key="pref_camera_audioencoder_key"
                android:defaultValue="@string/pref_camera_audioencoder_default"
                android:title="@string/pref_camera_audioencoder_title"
                android:entries="@array/pref_camera_audioencoder_entries"
                android:entryValues="@array/pref_camera_audioencoder_entryvalues"
                android:dialogTitle="@string/pref_camera_audioencoder_dialogtitle" />
    </PreferenceCategory>
    <PreferenceCategory
      android:title="@string/pref_camera_videoencoder_category">
        <ListPreference
                android:key="pref_camera_videoencoder_key"
                android:defaultValue="@string/pref_camera_videoencoder_default"
                android:title="@string/pref_camera_videoencoder_title"
                android:entries="@array/pref_camera_videoencoder_entries"
                android:entryValues="@array/pref_camera_videoencoder_entryvalues"
                android:dialogTitle="@string/pref_camera_videoencoder_dialogtitle" />
    </PreferenceCategory>
    <PreferenceCategory
      android:title="@string/pref_camera_outputformat_category">
        <ListPreference
                android:key="pref_camera_outputformat_key"
                android:defaultValue="@string/pref_camera_outputformat_default"
                android:title="@string/pref_camera_outputformat_title"
                android:entries="@array/pref_camera_outputformat_entries"
                android:entryValues="@array/pref_camera_outputformat_entryvalues"
                android:dialogTitle="@string/pref_camera_outputformat_dialogtitle" />
    </PreferenceCategory>
</PreferenceScreen>
